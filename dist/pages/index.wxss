.content {
  background: #eee;
}
.content swiper {
  height: 400rpx;
}
.content swiper image {
  width: 100%;
  height: 100%;
}
.content .shops {
  box-sizing: border-box;
  padding: 30rpx;
}
.content .shops .shop {
  box-shadow: 1px 1px 5px #eee;
  background: #fff;
  display: flex;
  flex-direction: row;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-top: 10rpx;
  box-sizing: border-box;
  align-items: center;
}
.content .shops .shop image {
  box-shadow: 1px 1px 5px #eee;
  width: 290rpx;
  height: 220rpx;
}
.content .shops .shop view {
  margin-left: 20rpx;
  text-align: center;
}
